<%-include ../include/header.ejs%>
<div class="container">
    <form class="form-horizontal" action="/articles/edit?id=<%=article._id%>" method="post">
        <div class="form-group">
            <label for="title" class="col-sm-2 control-label">标题</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="title" placeholder="<%=article.title%>" name="title">
            </div>
        </div>
        <div class="form-group">
            <label for="content" class="col-sm-2 control-label">内容</label>
            <div class="col-sm-9">
                <textarea class="form-control" rows="30" id="content" name="content">
                    <%=article.content%>
                </textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">提交</button>
            </div>
        </div>
    </form>
</div>
<%-include ../include/footer.ejs%>
