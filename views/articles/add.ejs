<%-include ../include/header.ejs%>
<div class="container">
    <form class="form-horizontal" action="/articles/add" method="post" enctype="multipart/form-data">
        <div class="form-group ">
            <label for="title" class="col-sm-2 control-label">标题</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="title" placeholder="标题" name="title">
            </div>
        </div>
        <div class="form-group">
            <label for="poster" class="col-sm-2 control-label">海报</label>
            <div class="col-sm-9">
                <input type="file" id="poster" placeholder="poster" name="poster">
            </div>
        </div>
        <div class="form-group">
            <label for="content" class="col-sm-2 control-label">内容</label>
            <div class="col-sm-9">
                <textarea class="form-control" rows="10" id="content" name="content"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">提交</button>
            </div>
        </div>
    </form>
</div>
<%-include ../include/footer.ejs%>
